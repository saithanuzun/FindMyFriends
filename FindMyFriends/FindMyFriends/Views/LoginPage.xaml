<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FindMyFriends.Views.LoginPage"
    BackgroundColor="#227093"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <StackLayout Margin="0,20,0,0" Padding="0,20,20,0">

            <Label Text="Find My Friends" Margin="00,100,0,100" FontAttributes="Bold" FontSize="50" FontFamily="MyFont" TextColor="White" HorizontalOptions="CenterAndExpand"></Label>
            <Entry Text="{Binding Email}" WidthRequest="300" HeightRequest="50" Placeholder="Enter E-mail"  HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></Entry>
            <Entry Text="{Binding Password}" WidthRequest="300" HeightRequest="50" Placeholder="Enter Password" IsPassword="True" HorizontalOptions="Center" VerticalOptions="Center"></Entry>

            <Button Command="{Binding LoginClickedCommand}" Text="Login!" TextColor="#f7f1e3" BackgroundColor="#ffb142" Margin="30,10,30,10"></Button>
            <Label Text="Create Account" TextColor="#f7f1e3" HorizontalOptions="CenterAndExpand"></Label>
            <Button Command="{Binding SignUpClickedCommand}" Text="Sign Up!" TextColor="#f7f1e3" BackgroundColor="#ffb142" Margin="25,10,25,10"></Button>


        </StackLayout>

    </ContentPage.Content>



</ContentPage>

